<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>


    <context-param>
        <param-name>sourcePath</param-name>
        <!--<param-value>c:\\KUploads\</param-value>-->
        <param-value>/home/FileUploadFacility/uploads/</param-value>                  
    </context-param>


  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
      classpath:/filedownloadfacility/security-cggh.xml
    </param-value>
  </context-param>

  <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>springSecurityFilterChain</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>    


    <listener>
      <listener-class>
        org.springframework.web.context.ContextLoaderListener
      </listener-class>
    </listener>


    <servlet>
        <servlet-name>FileDownloadFacilityServlet</servlet-name>
        <display-name>FileDownloadFacilityServlet</display-name>
        <description>This is a servlet of the File Download Facility to serve a specified file.</description>
        <servlet-class>filedownloadfacility.server.FileDownloadFacilityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>filedownloadfacility.FileDownloadFacility FileDownloadFacilityService</servlet-name>
        <servlet-class>filedownloadfacility.server.FileDownloadFacilityServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileDownloadFacilityServlet</servlet-name>
        <url-pattern>
            /filedownloadfacility.FileDownloadFacility/FileDownloadFacilityServlet
        </url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>filedownloadfacility.FileDownloadFacility FileDownloadFacilityService</servlet-name>
        <url-pattern>
            /filedownloadfacility.FileDownloadFacility/filedownloadfacility.FileDownloadFacility/FileDownloadFacilityService
        </url-pattern>
    </servlet-mapping>


</web-app>
